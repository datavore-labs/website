doctype
html
	head
		// "It's like all the data boxes are coming at him but the frog's just chilling!" -Jake
		meta(http-equiv="content-type" content="text/html")
		meta(name="robots" content="index")
		meta(charset="utf-8")
		// general meta
		title Datavore
		meta(name="description" content="Datavore is an adaptive analytics platform that captures usersâ€™ domain expertise in order to help merge, clean, manipulate and visualize data.")
		link(rel="icon", href="../img/favicon.ico")
		// twitter card meta
		meta(name="twitter:card" content="summary")
		meta(name="twitter:site" content="@datavorelabs")
		meta(name="twitter:image" content="http://www.datavorelabs.com/img/logo-web.png")
		// facebook opengraph meta
		meta(property="og:type" content="website")
		meta(property="og:url" content="http://www.datavorelabs.com/")
		meta(property="og:image" content="http://www.datavorelabs.com/img/logo-web.png")
		//display
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		// webfonts
		link(href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,700,500" rel="stylesheet" type="text/css")
		// icon library
		link(rel="stylesheet" href="../css/icomoon/style.css")
		// styles
		link(rel="stylesheet" href="../css/style.css")
	body
		// hack for page share previews
		img(src="../img/logo-web.png" style="display: none;")

		!= partial("./_menu")
		!= yield
		!= partial("../_shared/about")

		// required scripts
		script(src="../js/jquery.min.js")
		script(src="../js/parallax.min.js")
		script(src="../js/jquery.flip.min.js")
		// main page script
		script(src="../js/index.js")
		// google rich snippets schema
		script(src="../js/schema.js")
		// google analytics
		script(src="../js/analytics.js")
